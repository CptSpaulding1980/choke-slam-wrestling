<header class="site-header">
  <div class="header-container">
    <!-- Hamburger Button -->
    <button class="menu-toggle" aria-label="Menu" onclick="document.querySelector('.site-nav').classList.toggle('open')">
      ☰
    </button>

    <!-- Site Title -->
    <a href="{{ '/' | url }}" class="site-title">{{ site.title }}</a>

    <!-- Navigation -->
    <nav class="site-nav">
      <ul>
        <li><a href="{{ '/' | url }}">Home</a></li>

        <li class="has-submenu">
          <a href="#">Championships ▾</a>
          <ul class="submenu">
            {% for note in collections.notes %}
              {% if note.file.path.startsWith("Notes/Championships/") %}
                <li><a href="{{ note.url }}">{{ note.data.title or note.fileSlug }}</a></li>
              {% endif %}
            {% endfor %}
          </ul>
        </li>

        <li><a href="{{ '/events/' | url }}">Events</a></li>
        <li><a href="{{ '/wrestler/' | url }}">Wrestler</a></li>
        <li><a href="{{ '/statistics/' | url }}">Statistiken</a></li>
      </ul>
    </nav>
  </div>
</header>

<style>
/* Header Layout */
.site-header {
  background: #111;
  color: #fff;
  padding: 0.5rem 1rem;
  display: flex;
  align-items: center;
}
.header-container {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
}
.site-title {
  color: #fff;
  text-decoration: none;
  font-size: 1.5rem;
  margin-left: 1rem;
}
.site-nav ul {
  list-style: none;
  display: flex;
  gap: 1rem;
  margin: 0;
  padding: 0;
}
.site-nav li {
  position: relative;
}
.site-nav a {
  color: #fff;
  text-decoration: none;
  padding: 0.5rem;
  display: block;
}
.menu-toggle {
  background: none;
  border: none;
  font-size: 1.5rem;
  color: #fff;
  cursor: pointer;
}

/* Submenu */
.has-submenu > .submenu {
  display: none;
  position: absolute;
  top: 100%;
  left: 0;
  background: #111;
  flex-direction: column;
  min-width: 180px;
  z-index: 100;
}
.has-submenu:hover > .submenu {
  display: flex;
}

/* Mobile */
@media (max-width: 768px) {
  .site-nav {
    display: none;
    flex-direction: column;
    position: absolute;
    top: 60px;
    left: 0;
    width: 100%;
    background: #111;
    padding: 1rem;
    z-index: 100;
  }
  .site-nav.open {
    display: flex;
  }
  .site-nav ul {
    flex-direction: column;
    gap: 0.5rem;
  }
  .has-submenu > .submenu {
    position: relative;
    top: 0;
    left: 0;
    background: none;
  }
}
</style>
