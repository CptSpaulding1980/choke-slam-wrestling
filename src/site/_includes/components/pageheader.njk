<header class="site-header">
  <div class="header-container">
    <!-- Hamburger Button links -->
    <button class="menu-toggle" aria-label="Menu" onclick="document.querySelector('.site-nav').classList.toggle('open')">
      ☰
    </button>

    <!-- Site Title -->
    <a href="{{ '/' | url }}" class="site-title">{{ site.title }}</a>

    <!-- Navigation -->
    <nav class="site-nav">
      <ul>
        <li><a href="{{ '/' | url }}">Home</a></li>
        <li>
          <a href="#">Championships ▾</a>
          <ul class="submenu">
            {% for note in collections.notes %}
              {% if note.file.path.startsWith("Notes/Championships/") %}
                <li><a href="{{ note.url }}">{{ note.data.title or note.fileSlug }}</a></li>
              {% endif %}
            {% endfor %}
          </ul>
        </li>
        <li><a href="{{ '/events/' | url }}">Events</a></li>
        <li><a href="{{ '/wrestler/' | url }}">Wrestler</a></li>
        <li><a href="{{ '/statistics/' | url }}">Statistiken</a></li>
      </ul>
    </nav>
  </div>
</header>

<style>
/* Header Layout */
.site-header {
  background: #111;
  color: #fff;
  padding: 0.5rem 1rem;
}
.header-container {
  display: flex;
  align-items: center;
  gap: 1rem;
}
.site-title {
  color: #fff;
  text-decoration: none;
  font-size: 1.5rem;
}
.site-nav ul {
  list-style: none;
  display: flex;
  gap: 1rem;
  margin: 0;
  padding: 0;
}
.site-nav a {
  color: #fff;
  text-decoration: none;
  cursor: pointer;
}
.menu-toggle {
  display: block;
  background: none;
  border: none;
  font-size: 1.5rem;
  color: #fff;
  cursor: pointer;
}

/* Submenu */
.submenu {
  display: none;
  position: absolute;
  background: #222;
  margin-top: 0.5rem;
  padding: 0.5rem 0;
  border-radius: 4px;
  min-width: 200px;
}
.site-nav li:hover > .submenu {
  display: block;
}
.submenu li {
  padding: 0 1rem;
}
.submenu li a {
  display: block;
}

/* Hamburger always visible on desktop and mobile */
@media (max-width: 1200px) {
  .site-nav {
    display: none;
    flex-direction: column;
    background: #111;
    position: absolute;
    top: 50px;
    left: 0;
    width: 220px;
    padding: 1rem;
    z-index: 999;
  }
  .site-nav.open {
    display: flex;
  }
}
@media (min-width: 1200px) {
  .site-nav {
    display: flex;
    gap: 1rem;
  }
}
</style>

<script>
  // Optional: Klick außerhalb schließt Hamburger-Menü
  document.addEventListener('click', function(e){
    const nav = document.querySelector('.site-nav');
    const btn = document.querySelector('.menu-toggle');
    if(!nav.contains(e.target) && !btn.contains(e.target)) {
      nav.classList.remove('open');
    }
  });
</script>
