---
# Deine Frontmatter, falls gebraucht
---

<header class="site-banner">
  <img src="/path/to/your/banner-image.jpg" alt="Choke Slam Wrestling Banner" />
</header>

<header class="site-header">
  <div class="header-container">
    <!-- Hamburger Button -->
    <button 
      class="menu-toggle" 
      aria-label="Menu" 
      aria-expanded="false"
      id="burger-toggle"
      onclick="toggleMenu()"
    >
      ☰
    </button>

    <a href="{{ '/' | url }}" class="site-title">{{ site.title }}</a>

    <!-- Navigation -->
    <nav class="site-nav" id="site-nav">
      <ul>
        <li><a href="{{ '/choke-slam-wrestling/' | url }}">Home</a></li>
        <li><a href="{{ '/championships/' | url }}">Championships</a></li>
        <li><a href="{{ '/events/' | url }}">Events</a></li>
        <li><a href="{{ '/teams/' | url }}">Teams</a></li>
        <li><a href="{{ '/wrestler/' | url }}">Wrestler</a></li>
        <li><a href="{{ '/statistiken/' | url }}">Statistiken</a></li>
      </ul>
    </nav>
  </div>
</header>

<link href="{{ '/styles/cagematch.css' | url }}" rel="stylesheet">

<style>
.site-banner {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  max-width: 100%;
  height: 120px; /* Passe Höhe Banner an */
  background-color: #730000;
  z-index: 9999;
  text-align: center;
  box-shadow: 0 2px 6px rgba(0,0,0,0.3);
}
.site-banner img {
  height: 100%;
  width: auto;
  object-fit: contain;
  display: inline-block;
  vertical-align: middle;
}

/* Platz für das Banner schaffen */
body {
  padding-top: 120px;
}

.site-header {
  background: #111;
  color: #fff;
  padding: 0.5rem 1rem;
  position: relative;
  z-index: 998; /* unter banner */
  top: 120px; /* unter Banner positionieren */
}

.header-container {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  gap: 1rem;
}

.site-title {
  color: #fff;
  text-decoration: none;
  font-size: 1.5rem;
  flex-shrink: 0;
}

.site-nav {
  position: fixed;
  top: 120px;
  left: -220px;
  width: 200px;
  height: calc(100vh - 120px);
  background: #730000;
  color: white;
  flex-direction: column;
  padding: 2rem 1rem;
  gap: 1rem;
  transition: left 0.3s ease;
  overflow-y: auto;
  z-index: 9998;
}

/* Menü geöffnet */
.site-nav.open {
  left: 0;
}

.site-nav ul {
  list-style: none;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  margin: 0;
  padding: 0;
}

.site-nav a {
  color: #fff;
  text-decoration: none;
}

.menu-toggle {
  background: none;
  border: none;
  font-size: 1.5rem;
  color: #fff;
  cursor: pointer;
  flex-shrink: 0;
  position: fixed;
  top: 130px; /* knapp unter Banner */
  left: 15px;
  z-index: 10000;
  border-radius: 4px;
}

/* Desktop & Mobile: Burger immer da, Menü standardmäßig zu */

/* Optional: Desktop größerer Bildschirm etwas breiter */
@media (min-width: 1200px) {
  .site-nav {
    width: 250px;
  }
}

/* Desktop Menü bleibt zu, nur per Klick sichtbar */
</style>

<script>
function toggleMenu() {
  const nav = document.getElementById('site-nav');
  const btn = document.getElementById('burger-toggle');
  nav.classList.toggle('open');
  const expanded = btn.getAttribute('aria-expanded') === 'true';
  btn.setAttribute('aria-expanded', !expanded);
}
</script>
