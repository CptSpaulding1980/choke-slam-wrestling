  <img src="src/site/img/user/z_Images/ChokeSlamWrestling_Pausenbild.png" alt="Choke Slam Wrestling Banner" />
</header>

<nav class="site-nav" id="site-nav" aria-label="Hauptnavigation">
  <ul>
    <li><a href="{{ '/choke-slam-wrestling/' | url }}">Home</a></li>
    <li><a href="{{ '/championships/' | url }}">Championships</a></li>
    <li><a href="{{ '/events/' | url }}">Events</a></li>
    <li><a href="{{ '/teams/' | url }}">Teams</a></li>
    <li><a href="{{ '/wrestler/' | url }}">Wrestler</a></li>
    <li><a href="{{ '/statistiken/' | url }}">Statistiken</a></li>
  </ul>
</nav>

<button 
  class="menu-toggle" 
  aria-label="Menü öffnen/schließen" 
  aria-expanded="false"
  id="burger-toggle"
  onclick="toggleMenu()"
>
  ☰
</button>

<link href="{{ '/styles/cagematch.css' | url }}" rel="stylesheet">

<style>
.site-banner {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  max-width: 100%;
  height: 120px;
  background-color: #730000;
  z-index: 9999;
  text-align: center;
  box-shadow: 0 2px 6px rgba(0,0,0,0.3);
}
.site-banner img {
  height: 100%;
  width: auto;
  object-fit: contain;
  display: inline-block;
  vertical-align: middle;
}

body {
  /* Dynamischer left-padding für Inhalt, um nicht vom Menü überlappt zu werden */
  padding-top: 120px;
  transition: padding-left 0.3s ease;
  padding-left: 15;
}

.site-nav {
  position: fixed;
  top: 120px;
  left: -220px; /* versteckt */
  width: 250px;
  height: calc(100vh - 120px);
  background: #730000;
  color: white;
  flex-direction: column;
  padding: 2rem 1rem;
  gap: 1rem;
  transition: left 0.3s ease;
  overflow-y: auto;
  z-index: 9998;
}

.site-nav.open {
  left: 0;
}

.site-nav ul {
  list-style: none;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  margin: 0;
  padding: 0;
}

.site-nav a {
  color: #fff;
  text-decoration: none;
}

.menu-toggle {
  background: none;
  border: none;
  font-size: 1.5rem;
  color: #fff;
  cursor: pointer;
  position: fixed;
  top: 130px;
  left: 15px;
  z-index: 10000;
  border-radius: 4px;
}

/* Desktop: Inhalte neben Navigation ausrichten */
@media (min-width: 992px) {
  /* Navigation default versteckt */
  .site-nav {
    width: 250px;
    left: -250px;
    top: 120px;
    height: calc(100vh - 120px);
  }

  /* Menü offen: Navigation zeigt, Inhalt rückt nach rechts */
  .site-nav.open {
    left: 0;
  }

  /* Body muss zur Seite rücken, wenn Menü offen */
  body.menu-open {
    padding-left: 250px;
  }
}
</style>

<script>
function toggleMenu() {
  const nav = document.getElementById('site-nav');
  const btn = document.getElementById('burger-toggle');
  nav.classList.toggle('open');
  const expanded = btn.getAttribute('aria-expanded') === 'true';
  btn.setAttribute('aria-expanded', !expanded);

  // Body Klasse setzen, um Inhalt dynamisch zu verschieben bei offenem Menü
  if(nav.classList.contains('open')){
    document.body.classList.add('menu-open');
  } else {
    document.body.classList.remove('menu-open');
  }
}
</script>
