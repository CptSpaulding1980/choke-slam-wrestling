    <script>
        function toggleMenu() {
            const nav = document.getElementById('site-nav');
            const btn = document.getElementById('burger-toggle');
            nav.classList.toggle('open');
            const expanded = btn.getAttribute('aria-expanded') === 'true';
            btn.setAttribute('aria-expanded', !expanded);
        }
        
        // Menü schließen wenn außerhalb geklickt wird
        document.addEventListener('click', function(event) {
            const nav = document.getElementById('site-nav');
            const btn = document.getElementById('burger-toggle');
            
            if (!nav.contains(event.target) && event.target !== btn) {
                nav.classList.remove('open');
                btn.setAttribute('aria-expanded', 'false');
            }
        });
        
        // Tabellen-Zeilen Interaktivität
        document.addEventListener('DOMContentLoaded', function() {
            const tableRows = document.querySelectorAll('.wrestling-table tbody tr');
            
            tableRows.forEach(row => {
                row.addEventListener('click', function() {
                    // Entferne Auswahl von anderen Zeilen
                    tableRows.forEach(r => r.classList.remove('selected'));
                    
