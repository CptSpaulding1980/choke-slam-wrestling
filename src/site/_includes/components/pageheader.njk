<header class="site-header">
  <div class="header-container">
    <!-- Hamburger Button -->
    <button class="menu-toggle" aria-label="Menu" onclick="document.querySelector('.site-nav').classList.toggle('open')">
      â˜°
    </button>

    <!-- Site Title -->
    <a href="{{ '/' | url }}" class="site-title">{{ site.title }}</a>
  </div>

  <!-- Navigation Sidebar -->
  <nav class="site-nav">
    <ul>
      <li><a href="{{ '/' | url }}">Home</a></li>
      <li>
        <a href="{{ '/championships/' | url }}">Championships</a>
        <ul class="sub-menu">
          {% for note in collections.notes %}
            {% if note.data.dg_publish and note.file.path.startsWith("Notes/Championships/") %}
              <li><a href="{{ note.url }}">{{ note.data.title or note.fileSlug }}</a></li>
            {% endif %}
          {% endfor %}
        </ul>
      </li>
      <li><a href="{{ '/events/' | url }}">Events</a></li>
      <li><a href="{{ '/wrestler/' | url }}">Wrestler</a></li>
      <li><a href="{{ '/statistics/' | url }}">Statistiken</a></li>
    </ul>
  </nav>
</header>

<style>
/* Header-Layout */
.site-header {
  background: var(--background-primary, #111);
  color: var(--text-normal, #fff);
  padding: 0.5rem 1rem;
  position: relative;
  z-index: 1000;
}
.header-container {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  gap: 1rem;
}
.site-title {
  color: var(--text-normal, #fff);
  text-decoration: none;
  font-size: 1.5rem;
  font-weight: bold;
}

/* Hamburger Sidebar Navigation */
.site-nav {
  position: fixed;
  top: 0;
  left: -250px;
  height: 100%;
  width: 250px;
  background: var(--background-primary, #111);
  border-right: 2px solid var(--wrestling-purple, #8a2be2);
  overflow-y: auto;
  transition: left 0.3s ease;
  z-index: 999;
  display: flex;
  flex-direction: column;
  padding-top: 60px;
}
.site-nav.open {
  left: 0;
}
.site-nav ul {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}
.site-nav a {
  color: var(--text-normal, #fff);
  text-decoration: none;
  padding: 0.5rem 1rem;
  display: block;
}
.site-nav li {
  position: relative;
}
.site-nav .sub-menu {
  display: none;
  flex-direction: column;
  padding-left: 1rem;
  border-left: 2px solid var(--wrestling-purple, #8a2be2);
}
.site-nav li:hover > .sub-menu {
  display: flex;
}

/* Hamburger always visible */
.menu-toggle {
  display: block;
  background: none;
  border: none;
  font-size: 1.5rem;
  color: var(--text-normal, #fff);
  cursor: pointer;
  margin-right: 1rem;
}

/* Optional overlay when menu is open */
.menu-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.3);
  display: none;
  z-index: 998;
}
.site-nav.open + .menu-overlay {
  display: block;
}
</style>
