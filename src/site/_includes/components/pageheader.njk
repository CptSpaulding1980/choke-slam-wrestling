{#---
title: "Choke Slam Wrestling"
layout: "index.njk"
---#}

<header class="site-banner">
  <img src="src/site/img/user/z_Images/ChokeSlamWrestling_Pausenbild.png" alt="Choke Slam Wrestling Banner" />
</header>

<!-- Der zweite Header wurde entfernt -->

<!-- Navigation bleibt erhalten -->
<nav class="site-nav" id="site-nav" aria-label="Hauptnavigation">
  <ul>
    <li><a href="{{ '/choke-slam-wrestling/' | url }}">Home</a></li>
    <li><a href="{{ '/championships/' | url }}">Championships</a></li>
    <li><a href="{{ '/events/' | url }}">Events</a></li>
    <li><a href="{{ '/teams/' | url }}">Teams</a></li>
    <li><a href="{{ '/wrestler/' | url }}">Wrestler</a></li>
    <li><a href="{{ '/statistiken/' | url }}">Statistiken</a></li>
  </ul>
</nav>

<!-- Burger Button -->
<button 
  class="menu-toggle" 
  aria-label="Menü öffnen/schließen" 
  aria-expanded="false"
  id="burger-toggle"
  onclick="toggleMenu()"
>
  ☰
</button>

<link href="{{ '/styles/cagematch.css' | url }}" rel="stylesheet">

<style>
.site-banner {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  max-width: 100%;
  height: 120px; /* Höhe Banner */
  background-color: #730000;
  z-index: 9999;
  text-align: center;
  box-shadow: 0 2px 6px rgba(0,0,0,0.3);
}
.site-banner img {
  height: 100%;
  width: auto;
  object-fit: contain;
  display: inline-block;
  vertical-align: middle;
}

/* Body mit Abstand oben für Banner */
body {
  padding-top: 120px;
}

/* Navigation Sidebar für Mobil */
.site-nav {
  position: fixed;
  top: 120px;
  left: -220px;
  width: 200px;
  height: calc(100vh - 120px);
  background: #730000;
  color: white;
  flex-direction: column;
  padding: 2rem 1rem;
  gap: 1rem;
  transition: left 0.3s ease;
  overflow-y: auto;
  z-index: 9998;
}

/* Navigation sichtbar wenn offen */
.site-nav.open {
  left: 0;
}

.site-nav ul {
  list-style: none;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  margin: 0;
  padding: 0;
}

.site-nav a {
  color: #fff;
  text-decoration: none;
}

/* Burger Menü Button */
.menu-toggle {
  background: none;
  border: none;
  font-size: 1.5rem;
  color: #fff;
  cursor: pointer;
  position: fixed;
  top: 130px;
  left: 15px;
  z-index: 10000;
  border-radius: 4px;
}

/* Desktop-Bildschirme breiteres Layout */
@media (min-width: 992px) {
  body {
    padding-top: 120px; /* Bannerhöhe bleibt */
    margin-left: 250px; /* Platz für dauerhaft sichtbare Navigation */
  }

  /* Navigation fixiert und immer sichtbar */
  .site-nav {
    position: fixed;
    top: 120px;
    left: 0;
    width: 250px;
    height: calc(100vh - 120px);
    padding: 2rem 1.5rem;
    left: 0 !important; /* immer sichtbar */
    transition: none;
  }

  /* Burger-Menü Button ausblenden, da Navigation sichtbar */
  .menu-toggle {
    display: none;
  }
}
</style>

<script>
function toggleMenu() {
  const nav = document.getElementById('site-nav');
  const btn = document.getElementById('burger-toggle');
  nav.classList.toggle('open');
  const expanded = btn.getAttribute('aria-expanded') === 'true';
  btn.setAttribute('aria-expanded', !expanded);
}
</script>
