<header class="site-banner">
  <img src="src/site/img/user/z_Images/ChokeSlamWrestling_Pausenbild.png" alt="Choke Slam Wrestling Banner" />
</header>

<!-- Der zweite Header wurde entfernt -->

<link href="{{ '/styles/cagematch.css' | url }}" rel="stylesheet">

<style>
.site-banner {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  max-width: 100%;
  height: 120px; /* Passe Höhe Banner an */
  background-color: #730000;
  z-index: 9999;
  text-align: center;
  box-shadow: 0 2px 6px rgba(0,0,0,0.3);
}
.site-banner img {
  height: 100%;
  width: auto;
  object-fit: contain;
  display: inline-block;
  vertical-align: middle;
}

/* Platz für das Banner schaffen */
body {
  padding-top: 120px;
}

.site-nav {
  position: fixed;
  top: 120px; /* direkt unter dem Banner */
  left: -220px;
  width: 200px;
  height: calc(100vh - 120px);
  background: #730000;
  color: white;
  flex-direction: column;
  padding: 2rem 1rem;
  gap: 1rem;
  transition: left 0.3s ease;
  overflow-y: auto;
  z-index: 9998;
}

/* Menü geöffnet */
.site-nav.open {
  left: 0;
}

.site-nav ul {
  list-style: none;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  margin: 0;
  padding: 0;
}

.site-nav a {
  color: #fff;
  text-decoration: none;
}

.menu-toggle {
  background: none;
  border: none;
  font-size: 1.5rem;
  color: #fff;
  cursor: pointer;
  flex-shrink: 0;
  position: fixed;
  top: 130px; /* knapp unter Banner */
  left: 15px;
  z-index: 10000;
  border-radius: 4px;
}

/* Desktop & Mobile: Burger immer da, Menü standardmäßig zu */

/* Optional: Desktop größerer Bildschirm etwas breiter */
@media (min-width: 1200px) {
  .site-nav {
    width: 250px;
  }
}
</style>

<script>
function toggleMenu() {
  const nav = document.getElementById('site-nav');
  const btn = document.getElementById('burger-toggle');
  nav.classList.toggle('open');
  const expanded = btn.getAttribute('aria-expanded') === 'true';
  btn.setAttribute('aria-expanded', !expanded);
}
</script>
