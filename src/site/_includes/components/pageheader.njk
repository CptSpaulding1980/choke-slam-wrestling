<header class="site-header">
  <div class="header-container">
    <!-- Hamburger Button -->
    <button class="menu-toggle" aria-label="Menu" onclick="document.querySelector('.site-nav').classList.toggle('open')">
      ☰
    </button>

    <a href="{{ '/' | url }}" class="site-title">{{ site.title }}</a>

    <!-- Navigation -->
    <nav class="site-nav">
      <ul>
        <li><a href="{{ '/' | url }}">Home</a></li>

        <li class="has-submenu">
          <button class="submenu-toggle" aria-expanded="false">Championships ▾</button>
          <ul class="submenu">
            <li><a href="{{ '/championships/world/' | url }}">World</a></li>
            <li><a href="{{ '/championships/tag/' | url }}">Tag</a></li>
            <li><a href="{{ '/championships/women/' | url }}">Women</a></li>
          </ul>
        </li>

        <li><a href="{{ '/events/' | url }}">Events</a></li>
        <li><a href="{{ '/wrestler/' | url }}">Wrestler</a></li>
        <li><a href="{{ '/statistics/' | url }}">Statistiken</a></li>
      </ul>
    </nav>
  </div>
</header>

<link href="{{ '/styles/digital-garden-base.css' | url }}" rel="stylesheet">
<link href="{{ '/styles/style.css' | url }}" rel="stylesheet">
<link href="{{ '/styles/custom-style.css' | url }}" rel="stylesheet">

<style>
.site-header {
  background: #111;
  color: #fff;
  padding: 0.5rem 1rem;
  position: relative;
  z-index: 999;
}

.header-container {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  gap: 1rem;
}

.site-title {
  color: #fff;
  text-decoration: none;
  font-size: 1.5rem;
  flex-shrink: 0;
}

.site-nav ul {
  list-style: none;
  display: flex;
  gap: 1rem;
  margin: 0;
  padding: 0;
}

.site-nav a {
  color: #fff;
  text-decoration: none;
}

.menu-toggle {
  background: none;
  border: none;
  font-size: 1.5rem;
  color: #fff;
  cursor: pointer;
  flex-shrink: 0;
}

/* Submenu */
.has-submenu .submenu {
  display: none;
  flex-direction: column;
  position: absolute;
  background: #222;
  top: 100%;
  left: 0;
  padding: 0.5rem 0;
}

.has-submenu .submenu li {
  padding: 0.25rem 1rem;
}

.has-submenu .submenu li a {
  color: #fff;
}

.has-submenu .submenu-toggle {
  background: none;
  border: none;
  color: #fff;
  cursor: pointer;
}

/* Mobile & Desktop: Hamburger */
@media (max-width: 1024px) {
  .site-nav {
    position: fixed;
    top: 0;
    left: -220px;
    width: 200px;
    height: 100%;
    background: #111;
    flex-direction: column;
    padding: 2rem 1rem;
    gap: 1rem;
    transition: left 0.3s ease;
  }
  .site-nav.open {
    left: 0;
  }
  .site-nav ul {
    flex-direction: column;
    gap: 0.5rem;
  }
}

/* Desktop: submenu hover fallback */
@media (min-width: 1025px) {
  .has-submenu:hover .submenu {
    display: flex;
  }
}
</style>

<script>
document.querySelectorAll(".submenu-toggle").forEach(btn => {
  btn.addEventListener("click", () => {
    const expanded = btn.getAttribute("aria-expanded") === "true";
    btn.setAttribute("aria-expanded", !expanded);
    const submenu = btn.nextElementSibling;
    if (submenu) {
      submenu.style.display = expanded ? "none" : "flex";
    }
  });
});
</script>
